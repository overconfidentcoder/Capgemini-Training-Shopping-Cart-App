                            <a href="">Home</a>
                            <a href="~/CategoriesTab/Index">Categories</a>
                            <a href="~/CategoriesTab/IndexApparels">Apparels</a>
                            <a href="~/CategoriesTab/IndexConverse">Converse Unisex Sneakers</a>

                        </div>

                        @*Main image*@

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="product-images">
                                    <div class="product-main-img">
                                        <img src="~/img/products/Converse.jpg" alt="">
